<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="org.obeonetwork.dsl.soa.smartea.ui.command.SmartEAReferenceModelImport"
         point="org.eclipse.ui.commands">
      <command
            id="org.obeonetwork.dsl.soa.smartea.ui.command.SmartEAReferenceModelImport"
            name="Import SmartEA Reference Model...">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.obeonetwork.is.designer.menu?after=additions">
         <command
               commandId="org.obeonetwork.dsl.soa.smartea.ui.command.SmartEAReferenceModelImport"
               icon="icons/icon_ObeoSmartEA_16.png"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.obeonetwork.dsl.soa.smartea.ui.handlers.SmartEAReferenceModelImportHandler"
            commandId="org.obeonetwork.dsl.soa.smartea.ui.command.SmartEAReferenceModelImport">
         <enabledWhen>
            <with
                  variable="selection">
               <or>
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate
                           ifEmpty="false"
                           operator="and">
                        <instanceof
                              value="org.obeonetwork.dsl.soa.System">
                        </instanceof>
                     </iterate>
                  </and>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.obeonetwork.dsl.soa.Component">
                     </instanceof>
                  </iterate>
               </or>
            </with>
         </enabledWhen>
      </handler>
   </extension>

</plugin>
